				</isNotEmpty>
				<isNotEmpty prepend="," property="orderstateTime">	
					orderstate_time=#orderstateTime#
				</isNotEmpty>		
				<isNotEmpty prepend="," property="deliveryTime">
		        	delivery_time=#deliveryTime#
